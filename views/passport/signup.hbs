<section class="hero">
  <div class="container text-center">
    <div class="row">
      <div class="col-md-6">
        <a class="hero-brand" href="/" title="Home"><img alt="Logo" src="/images/logo.png"></a>
      </div>
    </div>



<div class="container">

  <div class="row">

 

    <div class="col-md-6">

      <form action="/signup" method="post">
      <div class="form-group row d-flex justify-content-center">
          <label for="username-input">nome de usuario</label>
          
          <input name="username" type="username" class="form-control" id="username-input">
        </div>
       
        <div class="form-group row d-flex justify-content-center">
          <label for="name-input">nome completo</label>
         
          <input name="name" type="text" class="form-control" id="name-input">
        </div>
       
        <div class="form-group row d-flex justify-content-center">
          <label for="password-input">assunto</label>
          
          <input name="disease" type="text" class="form-control" id="disease-input">
        </div>
       
        <div class="form-group row d-flex justify-content-center">
          <label for="password-input">senha</label>
         
          <input name="password" type="password" class="form-control" id="password-input">
        </div>
        
        {{#if message}}
       <div class="error-message">{{ message }}</div>
         {{/if}}

        

        <button type="submit" class="btn btn-dark">Cadastrar</button>

      </form>
    </div>

  </div>
</div>

